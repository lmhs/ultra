body
	cursor default
	line-height 24px

strong
	font-weight bold
	color #111

$dark-color
	color #111

$light-color
	color #959595

h1
.h1
	small
		display block
		margin-top 30px
		font-size 24px
		font-weight light
		padding-left 84px
	&--red
		color #E14013


h1
h2
h3
.h1
.h2
.h3
	margin-top 60px
	margin-bottom 40px

h4
h5
h6
h6
.h4
.h5
.h6
.h6
	margin-top 40px
	margin-bottom 30px

h2
.h2
	&--red
		color #E14013

h6.small
.h6.small
	font-size 18px

.main
	position relative

.btn
	&:active
		&
		&:focus
		&:hover
			outline none

a:focus
	outline none

a:hover
a:focus
	text-decoration none

.btn
.link
a
	transition all .2s ease-out

	&:hover
		transition all 0s

.right
	float right

.left
	float left

// clearfix
.cf:before
.cf:after
	display table
	content ' '

.cf:after
	clear both

i[class*=icon-]
span[class*=icon-]
	display inline-block

.inner
	margin 0 auto
	&--w1360
		width 1360px
	&--w1100
		width 1100px
	&--w900
		width 900px
	&--w787
		width 787px

.default-ul
	list-style disc
	margin-left 45px
	margin-top 25px
	li
		margin-bottom 25px

.divider-red
	margin 0 20px
	border-top 3px solid #E14013


