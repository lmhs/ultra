.contacts
	&-main
		overflow hidden
		&__inner
			background-color #252525
			border 1px solid #707070
			box-shadow inset 0px -4px 0px 0px #5d5d5d
			text-align center
			position relative


			&::before
			&::after
				content ''
				position absolute
				top 50%
				margin-top -50px
				width 302px
				height 100px

			&::before
				right 100%
				background url(../images/pattern-color-left-302x100.png) no-repeat

			&::after
				left 100%
				background url(../images/pattern-color-right-302x100.png) no-repeat

			.col-md-25-2 + .col-md-25-2
				border-left 1px solid #5d5d5d
				margin-left -1px
			&-item
				width 240px
				display inline-block
				color #fff
				text-align left
				padding 30px 10px
		&__heading
			color #fff
			font-size 20px
			margin-top 0
			margin-bottom 0
		&__text
			font-size 16px
		&__time
			font-size 28px
			font-weight semibold
			margin-top 5px

	&__nav
		.subheader-nav-tabs-outer
			background-color #F6F6F6
			border-top 1px solid #ebebeb
		&-tabs
			&.nav-tabs.subheader-nav-tabs > li > a
				padding-left 30px
				padding-right 30px

.help-big
	padding-top 68px
	border-bottom 2px solid #e14013
	background url(../images/pattern-color-bones-101x100.png) repeat-x
	background-position bottom 0 left 0
	position relative

	&__left
		padding-left 110px
	&__heading
		font-size 20px
		margin-bottom 10px
	&__call-list
		margin-top 25px
		&-item
			margin-bottom 7px
	&__call-link
		&__icon
			vertical-align middle
		&__number
			color #111
			font-size 20px
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
			display inline-block
			vertical-align middle
			line-height 29px
			margin-left 8px
			&-code
				font-weight light
				color #999
	&__email
		color #111
		font-weight light
		font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
		&:hover
		&:focus
		&:active
		&.active
			color #111
			text-decoration underline
	&__form
		margin-right -20px
		padding 0 70px 58px
		border-top-left-radius 2px
		border-bottom-left-radius 2px
		border 1px solid #e1e1e1
		background-color #f5f5f5
		&__fields
			margin-top 25px
		.form-group
			margin-bottom 5pxt

		input.form-control
			height 44px

		.form-control
			padding-top 8px
			padding-bottom 8px

		label
			padding-top 17px

	&__girl
		position absolute
		bottom 0
		left 50%
		margin-left -250px
		width 324px
		height 447px
		background url(../images/girl-big.png) no-repeat
