		margin-left 20px


.connection
	&__profile
		width 113px
		float left

	&__call
		float left
		padding-left 7px
		width 210px
		line-height 1
		&__phone
			display block
			margin-bottom 12px
			text-decoration none
		&__area
			vertical-align top
			font-size 17px
			padding 0 11px 0 16px
			color #999
		&__number
			vertical-align top
			font-size 18px
			color #333
		&__btn
			padding 11px 14px 10px
			font-size 14px

	&__photo
		border-radius 50%
		border 1px solid #d7d7d7

	&__name
		font-style italic
		font-size 12px
		line-height 1.2

	&__position
		font-size 12px
		font-style italic
		color #999
		display block

	&__address
		display inline-block
		font-size 15px
		margin-top 11px
		&-line
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif

	&__metro-name
		font-size 15px
		color #555
		display inline-block
		vertical-align top
		line-height 20px
		margin-left 8px

	&__icon-map
		vertical-align top

	&__map-link
		font-size 13px
		color #959595
		border-bottom-color #959595
		&:hover
			color #111
			border-bottom-color #111

