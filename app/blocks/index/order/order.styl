.order
	&__heading
		margin-top 54px
		margin-bottom 32px
		text-align left

	&__body
		padding-bottom 50px

	&__items
		padding-top 50px
		&__text
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
			font-size 15px
			color #7C7C7C
			margin-bottom 14px
			strong
				font-size 18px
				color #333

	&-items
		&-mobile
			background-color #EEE
			padding-top 20px
			padding-bottom 10px

	&__table
		td
			height 133px

		.table > thead > tr > th&__desc
			padding-left 100px

		&__price
		&__amount
		&__total
			&
			&-value
				text-align center

		&__price-value
		&__total-value
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
			font-size 14px

		&__price-value
			color #7C7C7C
		&__total-value
			color #292929

	&__form
		&__tooltip
			margin-top 10px
			display inline-block
			z-index 1050
			&-arrow
				top 50%
		&__input
			width 270px
			display inline-block
			vertical-align top
		&__price
			display inline-block
			color #292929
			font-size 14px
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
		&__back-link
			// nb! PT Sans?
			font-size 12px
			display inline-block
			line-height 14px
			vertical-align bottom
			color #888
			margin-right 44px
			&.link--pseudo
				border-bottom-color #888
				&:hover
				&:active
					border-bottom-color #E14013

		&__submit-btn
			padding-right 60px
			padding-left 60px
			vertical-align bottom

	&__fast
		border 1px solid #d7d7d7
		border-radius 2px
		margin-left 10px
		height 300px
		padding 38px 28px
		background 	url(../images/pattern-color-vertical.png) no-repeat 100% 0,
								url(../images/pattern-gray-vertical.png) repeat-y 100% 0,
								#F9F9F9
		&__inner
			width 276px
		&__heading
			font-size 32px
			margin-top 0
			margin-bottom 11px
		&__subheading
			line-height 18px
			margin-top 0
			margin-bottom 12px
		&__label
			color #656565
			font-weight light
			font-size 16px
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif

	&__delivery
		margin-top 45px
		padding-left 20px
		&__head
			// padding-right 90px
			padding-bottom 20px
		&__heading
			display inline-block
			vertical-align bottom
			margin-top 0
			margin-bottom 0
		&__strong
			margin-right 10px
			font-size 14px
			color #292929
		&__span
			color #7C7C7C
			font-size 14px
		&__default-ul
			font-size 15px
			font-style italic
			color #7C7C7C
			margin-left 20px
			margin-top 10px
			li
				margin-bottom 0

	&-item
		&__description
			&__name
				display block
				font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
			&__text
				color #555
				font-size 14px
		&__link-more
			color #888
			border-bottom-color #888
			font-size 12px
		&__checkbox__text
			display block
			font-size 12px
			color #333
			margin-top 8px
			line-height 1
			strong
				font-size 14px

.order__foot
	overflow hidden
	margin-top 20px
	margin-bottom 62px

.order__return
	float left

.order__cart
	float right
	&__refresh
		height 44px
		display inline-block
		vertical-align top
		line-height 44px
	&__final
		margin-left 47px
		display inline-block
		vertical-align top
		border 1px solid #e14013
		border-radius 2px
		height 44px
		line-height 44px
		color #7C7C7C
		padding 0 33px
		font-size 14px
		strong
			color #292929


.icon-order-delivery-wrap
	display inline-block
	vertical-align bottom
	margin-left 12px
	width 276px
	border-bottom 2px solid #E1E1E1
	text-align center

.icon-order-truck-delivery
	vertical-align bottom

.order-item__icon-trash
	vertical-align top


.order-items-text-mobile
	background-color #FFECB3
	border-bottom 1px solid #FFCA28
	font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif

	&__inner
		padding 10px 0 8px
	&__text
		font-size 14px
		color #000
		line-height 1

		+below(3)
			display block
	&__strong
		line-height 1
		+tablet()
			font-size 14px
			font-weight semibold
			color #E14013
		+mobile()
			font-size 16px
			color #000
