.order
	&__heading
		margin-top 54px
		margin-bottom 32px

	&__form
		&__input
			width 270px
			display inline-block
			vertical-align top
		&__price
			display inline-block
			color #292929
			font-size 14px
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
		&__back-link
			// nb! PT Sans?
			font-size 12px
			display inline-block
			line-height 14px
			vertical-align bottom
			color #888
			margin-right 44px
			&.link--pseudo
				border-bottom-color #888
				&:hover
				&:active
					border-bottom-color #E14013

		&__submit-btn
			padding-right 60px
			padding-left 60px
			vertical-align bottom

	&__border
		margin-top 50px
		margin-bottom 50px
		height 84px
		background url(../images/pattern-color-w1360.png) no-repeat center center

	&__fast
		border 1px solid #d7d7d7
		border-radius 2px
		margin-left 10px
		height 300px
		padding 38px 28px
		background #F9F9F9 url(../images/pattern-color-vertical.png) repeat-y 100% 0
		&__inner
			width 276px
		&__heading
			font-size 32px
			margin-top 0
			margin-bottom 11px
		&__subheading
			line-height 18px
			margin-top 0
			margin-bottom 12px
		&__label
			color #656565
			font-weight light
			font-size 16px
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif

	&__delivery
		margin-top 45px
		padding-left 20px
		&__head
			// padding-right 90px
			padding-bottom 20px
		&__heading
			display inline-block
			vertical-align bottom
			margin-top 0
			margin-bottom 0
		&__strong
			margin-right 10px
			font-size 14px
			color #292929
		&__span
			color #7C7C7C
			font-size 14px
		&__default-ul
			font-size 15px
			font-style italic
			color #7C7C7C
			margin-left 20px
			margin-top 10px
			li
				margin-bottom 0

.icon-order-delivery-wrap
	display inline-block
	vertical-align bottom
	margin-left 12px
	width 276px
	border-bottom 2px solid #E1E1E1
	text-align center

.icon-order-truck-delivery
	vertical-align bottom
