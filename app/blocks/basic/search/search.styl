.search-input-label
	width 100%
	vertical-align top
	position relative
	cursor text
	font-weight light
	&::before
		content ''
		sprite($icon_search)
		position absolute
		top 50%
		left 8px
		margin-top -8px
		z-index 3

	.input-group-addon
		width auto

.search__list
	font-size 12px
	color #888

.not-found__search-input-label
	margin-bottom 19px
	display inline-block
	width 236px

	+tablet()
		width 100%
		.social-not-found &
			width 280px
	+mobile()
		width 100%

	&::before
		left 18px

		+below(4)
			left auto
			right 17px

.header__search-select
	font-size 14px
	margin 6px

.header__search-input-group-addon
	padding 0
	border-color #D3D7DA

	.select2-container .select2-selection--single
		height 33px
	.select2-container--default .select2-selection--single .select2-selection__rendered
		line-height 33px
	.select2-container--default .select2-selection--single .select2-selection__arrow
		height 33px
	.select2-container--default .select2-selection--single
		border-top-left-radius 0
		border-bottom-left-radius 0
		border-color #D3D7DA
		border-left 0
		background-color #f9f9f9
	.select2-container--open
	.select2-container--focus.select2-container--open
		.select2-selection--single
			background-color #DDD
	.select2-container--default .select2-selection--single .select2-selection__rendered
		color #111

