.modal-content
	box-shadow none
	border-radius 2px

	@media (min-width: 720px)
		box-shadow none

.modal-header
	padding 0
	border none

.modal-body
	padding 0
	background #F9F9F9

.modal-dialog .close
	position absolute
	width 60px
	height 60px
	top 0
	right 0
	text-align center
	margin 0
	z-index 3

// .modal-close-icon
	// vertical-align top

.modal-dialog--login
	width 570px
	@media (min-width: 1100px)
		width 570px
	.modal-body
		padding-bottom 65px
		background  url(../images/pattern-color-bones-147x146.png) 0 115% repeat-x,
								#f9f9f9

.login-modal
	&__heading
		text-align center
		margin-top 70px
		margin-bottom 40px

	&__form
		width 410px
		margin 0 auto

		.col-sm-1
			width 15%

		.col-sm-4
			width 75%

		.col-sm-offset-1
			margin-left 15%

		.form-group
			margin-bottom 10px

		&__checkbox-wrap
			display inline-block
			vertical-align bottom
			margin-left 10px

		&__actions
			margin-bottom 22px
			clearfix()

			&__or
				font-size 16px
				line-height 1
				margin-top 10px
				margin-bottom 20px
				color #111
				text-align center
				position relative
				&::before
				&::after
					content ''
					display block
					height 1px
					width calc(50% - 40px)
					background-color #D7D7D7
					position absolute
					top 3px
				&::before
					left 0
				&::after
					right 0

			&--foot
				margin-bottom 0
				text-align center

			&__social
				display inline-block
				vertical-align top
				font-size 0
				&-link
					display inline-block
					vertical-align top
					i
						display block
					& + &
						margin-left 10px



.modal-dialog--subscribe
	width 1100px
	@media (min-width: 1100px)
		width 1100px
	.modal-header
		min-height 0
	.modal-content
		background 	url(../images/subscribe-girl.png) 23px 100% no-repeat,
								url(../images/pattern-color-175.png) 0 265px no-repeat,
								url(../images/pattern-color-bones-178x175.png) -2px 265px repeat-x,
								#F9F9F9

.subscribe-popup__text
