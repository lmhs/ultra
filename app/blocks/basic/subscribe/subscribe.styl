.subscribe
	text-align center
	font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif


	&__heading
		font-size 32px
		color #FFF
		margin-top 0
		margin-bottom 8px
		+tablet()
			margin-bottom 40px
		+mobile()
			margin-bottom 25px

	&__arrows
		+below(4)
			display none
		&__caption
			font-style italic
			font-size 18px
			color #636363
			vertical-align top

	&__forms
		text-align center

	&__form
		display inline-block
		padding-right 81px

		+tablet()
			width 280px
			text-align left
			padding-right 40px

		+mobile()
			display block
			padding-right 0
			padding-top 30px


		&+&
			padding-left 81px
			padding-right 0
			border-left 1px solid #363636
			+below(4)
				padding-right 0
				padding-left 40px
				border none
			+mobile()
				display block
				padding-left 0

	&__head
		text-align left
		&__txt
			font-size 22px
			font-weight light
			vertical-align middle
			+below(4)
				font-size 16px
				font-weight normal
				vertical-align bottom

			&--white
				color #FFF
			&--red
				color #E14013
		&__icon
			vertical-align middle
			+below(4)
				float right
				margin-right 0
				margin-top -15px
			&--person-male
				margin-right 75px
				+below(4)
					sprite($icon_person_male_fff_24x37)
					margin-right 0
			&--person-female
				margin-left 65px
				+below(4)
					sprite($icon_person_female_red_24x37)

	&__form__inner
		+at(3)
			display table
			width 100%

	&__body
		padding-top 17px
		+mobile()
			padding-top 12px
		+at(3)
			display table-cell
			vertical-align top

	&__foot
		padding-top 5px
		+tablet()
			padding-top 20px
			text-align left
		+mobile()
			padding-top 12px
		+at(3)
			display table-cell
			vertical-align top
			width 200px


	&__input
		border-radius 2px
		background-color #464646
		box-shadow inset 2px 1px 0px 0px rgba(54, 54, 54, 0.1)
		width 100%
		line-height 1
		height 38px
		padding 14px 11px 10px
		color #FFF
		border 0

		&::placeholder
			font-size 14px
			color #D7D7D7

		+below(4)
			height 40px
			padding-top 15px
			padding-bottom 11px

.icon-right-arrow--footer
	vertical-align top
	margin-top 16px
	margin-left 19px

.icon-left-arrow--footer
	vertical-align top
	margin-top 13px
	margin-right 14px

.icon-person-female
	vertical-align middle
	margin-left 61px

.icon-person-male
	vertical-align middle
	margin-right 67px

