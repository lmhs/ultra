.pick
	background-color #E1E1E1
	border 2px solid #b2b3b3
	border-radius 2px
	line-height 30px
	padding 3px 13px 3px 10px
	position absolute
	top 0
	left calc( 100% - 38px)
	z-index 2000
	white-space nowrap
	&::before
		content ''
		position absolute
		top 50%
		margin-top -8px
		left -8px
		width 0
		height 0
		border-style solid
		border-width 7.5px 8px 7.5px 0
		border-color transparent #b2b3b3 transparent transparent
	&::after
		content ''
		position absolute
		top 50%
		margin-top -8px
		left -5px
		width 0
		height 0
		border-style solid
		border-width 7.5px 8px 7.5px 0
		border-color transparent #E1E1E1 transparent transparent
	&__text
		font-size 13px
		color #111
		vertical-align baseline
	&__close-link
		vertical-align middle
