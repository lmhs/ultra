.details-item
	position relative

	&[open]
	&.open
		.summary
			border-bottom 1px solid #E1E1E1
		.summary-txt
			color #111
			border-bottom 0

.summary
	cursor pointer
	outline none
	padding-top 27px
	padding-bottom 16px
	padding-left 30px
	padding-right 30px
	background-color #F6F6F6

	border-top 4px solid #E1E1E1

	&::-webkit-details-marker
		display none

.summary-intro
	font-weight bold
	font-size 16px
	float left

.summary-txt-wrap
	margin-left 90px

.summary-txt
	color #555
	border-bottom 1px dashed #4C4C4C

.details-content
	font-size 14px
	margin-top 11px
	padding 30px 90px 40px 120px
	color #4C4C4C
	font-style italic
	background-color #FDFDFD

.details-section
	position relative
	padding 9px 20px

	&[open]
	&.open
		.details-section__summary
			padding-right 57px

		.icon-details-marker
			sprite($icon_arrow_up_e1_17x9)

	&__summary
		cursor pointer
		outline none
		&::-webkit-details-marker
			display none

.icon-details-marker
	position absolute
	right 21px
	top 17px
	sprite($icon_arrow_down_e1_17x9)



