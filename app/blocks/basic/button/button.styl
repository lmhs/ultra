button
.btn
	text-decoration none
	font-weight light

	&:focus
	&:active
		outline-style none

	&:hover
		transition all 0s
		text-decoration none
		color #FFF
// 46
.btn
	font-size 16px
	padding 11px 39px

	&-xsm
		font-size 12px
		padding 2px 12px
	// 34
	&-sm
		font-size 15px
		padding 5px 24px
	// 48
	&-med
		font-size 16px
		padding 12px 24px
	// 56
	&-lg
		font-size 18px
		padding 16px 31px

	&--default
		border 0

		&
		&:focus
		&.focus
			background-color #E14013
			color #fff

		&:hover
			background-color #EE3C0A

		&:active
			&
			&:focus
			&.focus
				background-color #C93005
				color #FFF
				box-shadow none
		&.active
			&
			&:focus
			&.focus
				background-color #C93005
				color #FFF
				box-shadow none

	&--red
		border 0

		&
		&:focus
		&.focus
			background-color #E14013
			color #fff

		&:hover
			background-color #111

		&:active
			&
			&:focus
			&.focus
				background-color #000
				color #FFF
				box-shadow none
		&.active
			&
			&:focus
			&.focus
				background-color #000
				color #FFF
				box-shadow none

	&--dark
		border 0

		&
		&:focus
		&.focus
			background-color #252525
			color #fff

		&:hover
			background-color #111

		&:active
			&
			&:focus
			&.focus
				background-color #000
				color #FFF
				box-shadow none
		&.active
			&
			&:focus
			&.focus
				background-color #000
				color #FFF
				box-shadow none

	&--ghost
		background-color rgba(0,0,0,0)

		&-gray
			color #959595
			border-color #d7d7d7

			&:hover
				color #555
				background-color #d7d7d7

		&-dark
			font-weight semibold
			color #111
			border-color #111

			&:hover
				background-color #111
				color #FFF

		&:active
			&
			&:focus
			&.focus
				box-shadow none
		&.active
			&
			&:focus
			&.focus
				box-shadow none

