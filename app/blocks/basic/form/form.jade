include ../help-block/help-block
//- Textarea
//-
//- Accepted arguments:
//- * name (String)
//- * value (String)
//- * placeholder (String)
mixin textarea(args)
	- args.name ? label= args.name : ''
	label.field-label= label
	textarea.field(
		name=args.name ? args.name : null
		placeholder=args.placeholder ? args.placeholder : null
		id=attributes.id ? attributes.id : null)&attributes(attributes)= args.value ? args.value : null

//- Input control with form-group wrapper
mixin input(args)
	- if (args.name)
		- var label= args.name
	.form-group
		if label
			label.control-label(
				for=attributes.id ? attributes.id : null,
				class=args.required ? 'is-required' : '') #{label}
		input.form-control(
			type=args.type ? args.type : 'text'
			name=args.name ? args.name : null
			value=args.value ? args.value : null
			step=args.step ? args.step : null
			min=args.min ? args.min : null
			max=args.max ? args.max : null
			placeholder=args.placeholder ? args.placeholder : null
			aria-describedby=args.help ? args.help.name : null)&attributes(attributes)
		if args.help
			+helpBlock(args.help.name)
				|!{args.help.text}
		if block
			block

//- Input control with form-group wrapper
mixin inputNumber(args)
	- if (args.name)
		- var label= args.name
	.form-group.input-group.input-number.js-input-number
		if label
			label.control-label(
				for=attributes.id ? attributes.id : null,
				class=args.required ? 'is-required' : '') !{label}
		input.form-control.js-input-number-control(
			data-type='number'
			data-ride='spinner'
			type='number'
			name=args.name ? args.name : null
			value=args.value ? args.value : null
			min=args.min ? args.min : null
			max=args.max ? args.max : null
			placeholder=args.placeholder ? args.placeholder : null
			aria-describedby=args.help ? args.help.name : null)&attributes(attributes)
		.input-group__btn--vertical
			button(type='button', role='button', data-value='increase', data-toggle='spinner', data-target='#'+attributes.id).input-number-btn.input-number-btn--up.js-up-input
				i.icon-caret-up
			button(type='button', role='button', data-value='decrease', data-toggle='spinner', data-target='#'+attributes.id).input-number-btn.input-number-btn--down.js-down-input
				i.icon-caret-down
		if args.help
			+helpBlock(args.help.name)
				| !{args.help.text}
		if block
			block


