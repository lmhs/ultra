@charset 'UTF-8'

.carousel__control
	position absolute
	z-index 1
	top 50%
	margin-top -37px
	font-size 0
	line-height 0
	display block
	width 40px
	height 74px
	padding 0
	cursor pointer
	color transparent
	border none
	outline none
	background rgba(37, 37, 37, .5)
	&:hover
		background rgba(37, 37, 37, .7)

.slick-next
	@extend .carousel__control
	right 0

.slick-prev
	@extend .carousel__control
	left 0


.slick-loading .slick-list
	background #fff url(../images/ajax-loader.gif) center center no-repeat

