.slick-dots
	position absolute
	bottom 6px
	display block
	width 100%
	padding 0
	list-style none
	text-align center
	li
		position relative
		display inline-block
		width 14px
		height 14px
		margin 0 5px
		padding 0
		cursor pointer
		&.slick-active
			button
				sprite($icon_diamond_red_14x14)

.slick-slider
	position relative
	display block
	box-sizing border-box
	user-select none
	touch-callout none
	touch-action pan-y
	tap-highlight-color transparent

.slick-dots li button
	font-size 0
	line-height 0
	display block
	background none
	width 14px
	height 14px
	cursor pointer
	sprite($icon_diamond_dark_14x14)
	color transparent
	border 0
	outline none
.slick-dots li button:hover
.slick-dots li button:focus
	outline none
	sprite($icon_diamond_red_14x14)
