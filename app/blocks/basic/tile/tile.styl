.tile
	position relative
	height 0
	margin-top 12px
	&-2x2
		padding-bottom 100%
	&-2x1
		padding-bottom calc(50% - 6px)
	&-4x2
		padding-bottom calc(50% - 6px)

	&__link
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		text-decoration none
		overflow hidden

		// perfomance issues solution:
		// http://tobiasahlin.com/blog/how-to-animate-box-shadow/
		&::after
			content ''
			box-shadow inset 0px 0px 0px 1px rgba(174,174,174,1)
			opacity 0
			// transition opacity 0.3s ease-in-out
			position absolute
			top 0
			left 0
			width 100%
			height 100%


		&:hover
			.tile__inner
				border-color #C0C0C0
			&::after
				opacity 1

	&__inner
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		display table
		background-color #FFF
		padding 20px

		&--top
			border-top 4px solid #f8f8f8

		&--bottom
			border-bottom 4px solid #f8f8f8

		.tile-2x2 &
		.tile-4x2 &
			text-align center

		.tile-2x1 &
			padding 0
			padding-right 20px

		.tile--lavender-blush &
			background-color #fef4f3
			border-color #fdedeb
			&:hover
				border-color #C0C0C0

		.tile--white-smoke &
			background-color #f6f6f6
			border-color #eeeeee
			&:hover
				border-color #C0C0C0

		.tile--alice-blue &
			background-color #effafe
			border-color #e5f6fd
			&:hover
				border-color #C0C0C0

		.tile--ivory &
			background-color #fafef3
			border-color #f4fde6
			&:hover
				border-color #C0C0C0

	&__img-wrap
		display table-row
		height 100%

		.tile-2x1 &
			width 50%
			overflow hidden
			display block


	&__img-outer
		overflow hidden
		display table-cell
		vertical-align middle
		padding-top 20px

		.tile-2x1 &
			position relative
			overflow hidden
			display block
			padding 0
			padding-bottom 100%

			img
				position absolute
				top 0
				right 0
				bottom 0
				left 0

		img
			max-width 100%
			max-height 100%
			margin auto
			transform translateZ(0)



	&__heading
		font-weight extrabold
		display table-row
		height 0
		margin-top 24px
		.showcase__tile &
		.showcase__tile.tile-2x2 &
		.showcase__tile.tile-2x1 &
		.showcase__tile.tile-4x2 &
			font-weight semibold
			font-size 24px

		small
			display block
			font-weight light
			color #111
			.showcase__tile &
			.showcase__tile.tile-2x2 &
			.showcase__tile.tile-2x1 &
			.showcase__tile.tile-4x2 &
				font-weight normal
				font-size 13px
				padding-left 0
				margin-top 6px
				color #888

		.tile-2x2 &
			font-size 30px
			small
				font-size 24px


		.tile-2x1 &
			font-size 24px
			float right
			display block
			height auto
			width 50%
			small
				font-size 18px

		.tile-4x2 &
			font-size 28px
			.showcase__tile &
				font-size 24px
			small
				display inline
				font-size 28px


