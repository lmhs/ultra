.countdown
	font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
	font-weight light
	font-size 0
	color #FFF
	&__dash
		display inline-block
		vertical-align top
		&+&
			margin-left 5px
			&::before
				content ''
				display inline-block
				vertical-align top
				sprite($icon_colon)
				margin-top 10px
				margin-right 5px

	&__field
		font-size 32px
		line-height 44px
		height 44px
		width 29px
		text-align center
		display inline-block
		vertical-align top
		padding 0 5px
		border-radius 2px
		background-color #252525
		position relative
		letter-spacing 14px
		box-shadow inset -1.732px 1px 0px 0px rgba(1, 2, 2, 0.75)

		&+&
			margin-left 1px

	&__caption-text
		color #999
		font-size 12px
		text-transform lowercase
		text-align center
		line-height 1
		margin-top 4px


