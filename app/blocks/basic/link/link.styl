.link
	text-decoration underline

	&--secondary
		color #111

		&:hover
		&:focus
			color #959595
			text-decoration none

	&--pseudo
		text-decoration none
		border-bottom 1px dashed #E14013
		&:hover
		&:focus
			text-decoration none
			border-bottom-color #E14013
		&-with-icon
			border-bottom none

			.link__text
				display inline-block
				vertical-align baseline
				line-height 1

				border-bottom 1px dashed #E14013

			.link__icon
				display inline-block
				vertical-align baseline


			&:hover
			&:focus
				border-bottom none
				.link__text
					border-bottom 1px dashed #E14013





	&--light
		color #FFF

		&:hover
		&:focus
			color #FFF

.footer__link--light
	color #E1E1E1
	text-decoration none
	font-size 15px

.footer__link--red
	font-size 13px
	text-decoration none

.footer__link--dark
	font-size 13px
	color #707070
	text-decoration none

.footer__link--heading
	color #ccc

.header-top__link
	font-size 13px
	color #252525
	display inline-block
	vertical-align top
	padding 9px 13px 7px
	text-decoration none
	&--user-menu
		padding-right 0
		padding-left 0
	&--user-quit
		padding-left 30px
		padding-right 40px

.cart__label
	border-radius 50%
	display block
	width 16px
	height 16px
	line-height 16px
	position absolute
	top -8px
	right -8px
	z-index 1
	font-size 11px
	font-style normal
	color #FFF
	text-align center
	background-color #ACACAC
	&--not-empty
		background-color #ff503f


.link-small--pseudo
	display inline-block
	text-decoration none
	vertical-align top
	margin-top 11px
	line-height 18px

.link-icon-return
	vertical-align bottom

.link-text--pseudo
	color #999
	font-size 13px
	border-bottom 1px dashed #999
	margin-left 5px

.search__list__link
	font-size 12px
	color #888
	border-bottom-color #888
	@extend .link--pseudo
	&:hover
	&:focus
		border-bottom-color #111
		color #111
	&--medium
		font-size 16px
		color #464646
		&:hover
		&:focus
			border-bottom-style solid
	&--large
		font-size 18px
		border-bottom-color #111
		color #111
		&:hover
		&:focus
			border-bottom-style solid

.main__link
	padding-left 10px
	padding-right 10px
	&::before
		content ''
		position absolute
		left -1px
		top 0
		display block
		float left
		width 1px
		height 100%
		background #363636

	&
	&:focus
		width 100%
		height 90px
		display block
		float left
		color #FFF
		font-size 13px
		line-height 18px
		text-align center
		text-decoration none
		background-color #252525
		position relative
		+below(4)
			border 1px solid #e4e4e4
			border-left none
			padding-top 10px
			background none
			font-size 12px
			line-height 14px
			font-weight semibold
			color #0B0B0B
			height 127px
			&::before
				content none
		+below(3)
			border-left 1px solid #e4e4e4

	.nav-list-item--main.is-selected &
	&:hover
		box-shadow inset 0px 0px 0px 1px #E14013
		color #fff
		border-bottom 3px solid #E14013
		background-color #363636
		+below(4)
			box-shadow none
			color #0B0B0B
			background none
			border 1px solid #e4e4e4
			border-left none
		+below(3)
			border-left 1px solid #e4e4e4

	.nav-list-item--main:last-child &
		border-right 1px solid #363636

	&--sale
		&
		&:focus
			background-color #E14013

		.nav-list-item--main.is-selected &
		&:hover
			background-color #EE3C0A
			border-bottom 0
			box-shadow none

.help-link--inline
	// nb! PT Sans?
	font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
	font-size 12px
	line-height 1
	margin-top 0
	margin-bottom 0
	font-style normal
	+below(4)
		font-size 13px

		&
		&:hover
		&:active
		&.acitve
		&:focus
			color #333
			border-bottom-color #333

	+tablet()
		font-weight light

	+mobile()
		font-weight semibold

.order__return-link
	font-size 12px
	color #7C7C7C
	border-bottom-color #7C7C7C

.order__cart__refresh-link
	text-decoration none
	&-text--pseudo
		color #006889
		vertical-align top
		margin-left 8px
		border-bottom 1px dashed #006889

.follow-link
	display inline-block
	width 280px
	height 40px
	line-height 40px
	font-style italic
	font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
	font-size 15px
	color #FFF
	text-decoration none
	position relative
	padding-left 54px
	&::before
		content ''
		position absolute
		display block
		width 1px
		left 36px
		top 7px
		bottom 7px
	&:hover
		color #FFF
		text-decoration underline
	&--fb
		background-color rgb(47, 128, 208)
		&::before
			background-color #3a5580
		.icon-fb-10x16
			position absolute
			top 13px
			left 14px

.category-tile__list-item__link
	text-decoration none
	font-size 13px
	line-height 1.4
	color #666
	+below(3)
		color #333
		line-height 45px
	&:hover
		color #666
		text-decoration underline
