.select--sm
	width 100%
	height 40px
	line-height 40px


.select-sm-wrap
	.select2-container .select2-selection--single
		height 40px
		font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
		.select2-selection__rendered
			padding-left 12px
			padding-right 30px

	.select2-container--default .select2-selection--single
		border-color #c4c4c4
	.select2-container--default .select2-selection--single
		.select2-selection__rendered
			line-height 40px
			color #333
		.select2-selection__arrow
			b
				border none
				sprite($icon_arrow_down_333_9x6)
				position static
				top auto
				left auto
				margin-left auto
				display inline-block
				vertical-align middle
				margin-top 11px

	.select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
		sprite($icon_arrow_up_333_9x6)


.select-sm-city-wrap
	+mobile()
		width 100%
	.select2-container--default .select2-selection--single .select2-selection__arrow b
		margin-top -2px
		+above(5)
			border-color #292929 transparent transparent transparent
			border-style solid
			border-width 4px 4px 0 4px
			height 0
			width 0
			background none


	.select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
		+above(5)
			border-color transparent transparent #292929 transparent
			border-width 0 4px 4px 4px
			height 0
			width 0
			background none

	&.select-sm-wrap .select2-container .select2-selection--single
		height 44px
		+below(4)
			height 40px

	&.select-sm-wrap .select2-container--default .select2-selection--single
		border-color #EBEBEB

	&.select-sm-wrap .select2-container--default .select2-selection--single .select2-selection__rendered
		line-height 44px
		+below(4)
			line-height 40px

	.select2-container--default .select2-selection--single .select2-selection__arrow
		width 38px
		height 38px
		text-align center
		&::before
			content ''
			position absolute
			left -1px
			width 1px
			height 34px
			top 4px
			background-color #ebebeb
			display block
			+below(4)
				content none

