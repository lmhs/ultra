.subscribe-section-big
	border-top 1px solid #E1E1E1
	border-bottom 1px solid #E1E1E1
	padding-top 66px

	background 	url(../images/pattern-color-bones-136x135.png) 0 273px repeat-x,
							#F3F3F5

	&__girl
		background 	url(../images/subscribe-girl-no-bg.png) 0 100% no-repeat
		background-size 568px 433px
		width 568px
		height 433px
		position absolute
		bottom 0
		left -450px
	&__inner
		position relative
		margin 0 auto
		max-width 344px
		padding-bottom 35px

	&__head
		position relative
	&__body
		position relative

	&__heading
		font-size 50px
		color #252525
		line-height 1
		margin-top 0
		margin-bottom 0
		text-align left

	&__label
		margin-top 4px
		display block
		color #FFF
		font-size 28px
		font-weight normal
		background-color #252525
		line-height 1
		padding 8px 20px 10px

	&__list
		padding-top 20px
		padding-bottom 30px
		&-item
			font-size 18px
			font-weight normal
			color #333
			position relative
			&::before
				content 'â€”'
				font-weight normal
				padding-right 5px

	&__form
		border 1px solid #e1e1e1
		box-shadow 0px 2px 4px 0px rgba(54, 54, 54, 0.1)
		background-color #FFF
		border-radius 3px
		padding 30px 40px 30px 35px

		&__heading
			font-size 17px
			color #333
			margin-top 0
			margin-bottom 9px
			text-transform uppercase
			text-align justify


	&__padlock-icon
		position absolute
		left -40px
		top 53px

	&__arrow-icon
		position absolute
		bottom -113px
		right -36px

	&__envelope-icon
		position absolute
		top 14px
		right -5px

