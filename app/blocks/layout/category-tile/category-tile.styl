.category-tile
	position relative
	+below(3)
		margin-bottom 20px
	&__head
		text-align center
		height 24px
		+below(3)
			border 1px solid #EBEBEB
			border-top-width 4px
			border-bottom none
			height auto
			min-height 70px
			text-align left
			padding-right 80px
			display table
			width 100%
			&-link
				display table-cell
				vertical-align middle


		&--super-offer
			+below(3)
				display none
	&__heading
		padding 0 17px
		background-color #FFF
		margin 0
		font-size 16px
		position relative
		bottom -10px
		display inline-block
		+below(3)
			color #333
			bottom auto
		&:hover
			text-decoration underline

	&-assistant
		&__heading
			margin-top 6px
			margin-bottom 30px
			small
				display block
				font-weight light
				margin-top 5px
				color #111
				font-size 66.6%
		&-price
			color #898989
			font-size 14px
			font-weight normal

	&__body
		border 1px solid #EBEBEB
		border-top-width 4px
		min-height 200px
		padding-top 11px
		padding 11px 10px 20px 20px
		+below(3)
			padding 0
			min-height 0
			border-top-width 1px
		&__inner
			position relative
		&--assistant
			background-color #F6F6F6
			position relative
			overflow hidden
			&::before
				content ''
				position absolute
				top -136px
				left 43px
				width 200%
				height 80px
				transform rotate(127deg)
				background url(../images/pattern-color-bones-83x80.png) repeat-x
				background-size 83px 80px
		&--columns
			padding 34px 0 40px

		&--super-offer
			+below(3)
				padding 40px 10px 15px 15px

	&__label
		display table
		background-color #252525
		font-size 18px
		color #FFF
		position relative
		z-index 1
		+below(3)
			width 100%
			position absolute
			left 0
			top 0
			font-size 16px


		&-text
			display table-cell
			vertical-align middle
			height 32px
			padding 0 10px
			font-weight bold
		&-percent
			display table-cell
			vertical-align middle
			background-color #FF503F
			border-left 3px solid #f13d2b
			padding 0 10px 0 7px
			font-weight semibold
			+below(3)
				text-align center
				background-color #ff503f
				border none

	&__title
		font-size 14px
		line-height 1.3
		color #111
		display block
		margin-top 5px
		margin-bottom 5px
		text-decoration none
		&:hover
			color #111
			text-decoration underline

	&-super__info
	&-assistant__info
		margin-right 150px
		+below(3)
			margin-right 100px
	&__info
		margin-left 180px
		+below(3)
			margin-left 0

	&__img
	&-super__img
	&-assistant__img
	&-column__img
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		max-width 100%
		max-height 100%
		margin auto
		transform translateZ(0)

		&-outer
			position relative
			display block
			padding 0
			padding-bottom calc(100% - 20px)
			border 10px solid rgba(0,0,0,0)

	&-super__img-wrap
	&-assistant__img-wrap
		float right
		width 150px
		+below(3)
			width 90px

	&__img-wrap
		float left
		width 180px
		+below(3)
			position absolute
			width 60px
			top 2px
			right 6px

	&__actions
		margin-top 26px
		font-size 0
		&--super-offer
			+below(3)
				margin-right -100px
				padding-right 5px
		+below(3)
			margin-top 6px
	&__price
		display inline-block
		width 50%
		vertical-align top
		padding-top 4px
		line-height 1
		+below(3)
			display block
			width 100%
		&-old
			font-size 13px
			color #898989
		&-special
			font-size 16px
			display block
			color #E14013
			+below(3)
				font-size 13px
				font-weight semibold
	&__btn-wrap
		display inline-block
		width 50%
		vertical-align top
		+below(3)
			display block
			width 100%
			margin-top 24px

	&__list
		height 150px
		padding-top 25px
		padding-right 10px
		position relative
		overflow hidden
		+below(3)
			padding 0
			height auto
		&-item
			padding-left 10px
			line-height 1
			display block
			position relative
			margin-bottom 5px
			+below(3)
				height 45px
				border-bottom 1px solid #EBEBEB
				padding-left 30px
				margin-bottom 0

			&::before
				content ''
				width 0
				height 0
				border-style solid
				border-width 3px 0 3px 5px
				border-color transparent transparent transparent #555555
				-webkit-transform rotate(360deg)
				position absolute
				left 0
				top 5px
				+below(3)
					top 19px
					left 18px
		&::after
			content ''
			position absolute
			bottom 0
			left 0
			width 100%
			height 40px
			background-image linear-gradient(to top, rgb(255,255,255) 0%, rgba(255,255,255,0) 100%)
			+below(3)
				content none

	&-column__title
		font-size 15px
		color #333
		text-align center

	&-column__item
		&:hover
			.category-tile-column__title
				text-decoration underline




