.expert
	background-color #F9F9F9
	padding-top 72px
	padding-bottom 100px

	&__heading
		margin-top 0
		margin-bottom 30px
		text-align center

		small
			padding-left 0
			margin-top 5px

	&__avatar
		padding-right 44px
		padding-top 2px

	&__blockquote
		border-left 0
		padding-top 0
		padding-bottom 0
		padding-left 43px
		margin-bottom 0
		position relative
		color #555
		font-size 15px
		line-height 1.3
		font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
		font-weight light
		min-width 460px
		&::before
			position absolute
			content ''
			sprite($icon_rd_quote)
			top 3px
			left 0
		footer
			margin-top 20px
			color #111
			font-size 15px
			font-weight semibold
			&::before
				content ''
