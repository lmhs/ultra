.banner-small
	color #111
	display inline-block
	border 3px solid rgb(246, 246, 246)
	border-radius 2px
	background-color #FFF
	background 	url(../images/pattern-color-232x57.png) no-repeat,
							#FFF
	background-position right 4px center
	padding 10px 90px 10px 10px


	&__strong
		font-size 20px
		display block
		line-height 1
	&__text
		font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
		font-size 16px

.banner-big
	margin-top 17px
	height 360px
	overflow hidden
	position relative
	background #133C4E
	&__background
		position absolute
		left 0
		top 0
	&__product-img-wrap
		position absolute
		top 0
		left 0
		width 100%
		height 100%
	&__product-img
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		max-width 100%
		max-height 100%
		margin auto
		transform translateZ(0)
	&__product-info
		position absolute
		right 0
		max-width 50%
		top 0
		height 100%
		padding-left 135px
		padding-right 80px
		padding-top 55px
	&__heading
		color #FFF
		margin-top 22px
		margin-bottom 22px
		text-transform uppercase
	&__icons
		display flex
		align-items center
		justify-content space-around
		margin-top 22px
		margin-bottom 26px
	&__actions
		position relative
		z-index 2
	&__link
		&::after
			position absolute
			content ''
			top 0
			right 0
			bottom 0
			left 0
			z-index 1

.banner-vertical
	position relative
	overflow hidden
	height 500px
	margin-bottom 20px
	&__background
		position absolute
		left 0
		top 0
		width 100%
		height 100%
	&__product-info
		position absolute
		top 0
		left 0
		width 100%
		padding 34px 20px
		z-index 2
	&__heading
		font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
		font-size 20px
		line-height 1.3
		font-weight light
		color #8FDBF6
		margin-top 14px
		margin-bottom 20px
		strong
			font-weight bold
			font-size 22px
			color #8FDBF6
	&__product-img-wrap
		position absolute
		top 200px
		right 0
		z-index 1
	&__link
		&::after
			position absolute
			content ''
			top 0
			right 0
			bottom 0
			left 0
			z-index 1

.banner-horizontal
	position relative
	overflow hidden
	height 130px
	&__background
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		background #EEE
	&__product-info
		position absolute
		top 0
		left 0
		width 100%
		padding 20px
		z-index 2
	&__heading
		font-size 28px
		line-height 1
		color #111
		margin-top 0
		margin-bottom 10px
		text-align left
		small
			margin-top 0
			font-size 22px
			color #111
			display block
			font-weight light

	&__product-img-wrap
		position absolute
		top 0
		right 80px
		z-index 1

.content-catalogue__banner-horizontal
	width 722px
	float right

