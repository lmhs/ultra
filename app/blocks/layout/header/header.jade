include ../header-top/header-top
include ../header-main/header-main
include ../../basic/nav/nav

mixin header()
	block vars
	- var	order = pageId === 'order'
	header.header(class= order ? 'header--w-border' : '')
		.header__top-wrap
			.container
				.row
					.col-xs-12
						+header-top()
		.header__main-wrap
			.container
				.row
					.col-xs-12
						+header-main()
		if !order
			.header__nav-wrap
				.container
					.row
						.col-xs-12
							+nav(getData('navigation')[0],'main').nav-list--inline.clearfix



