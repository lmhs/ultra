.address
	display block
	margin 0 auto
	// white-space nowrap
	text-align center

	&__street
		display inline-block

		&__icon
			vertical-align bottom
			margin-right 5px
		&__text
			color #111
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
			vertical-align bottom
			font-size 24px
			font-weight light
			line-height 1
			display inline-block

	&__metro
		display block
		margin 6px auto 0
		&__name
			white-space nowrap
			vertical-align middle
			line-height 20px
		&__icon
			vertical-align middle
			margin-right 8px
		&__text
			vertical-align middle
			line-height 20px
			font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
			font-weight regular
			font-size 15px
			color #555
			margin-right 8px

	&__link
		margin-top 6px
		margin-bottom 30px
		.link
			color #888
			font-size 12px
		.link--pseudo
			border-bottom-color #888
			&:hover
			&:focus
			&:active
			&.active
				border-bottom-style solid

