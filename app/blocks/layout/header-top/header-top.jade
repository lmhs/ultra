include ../../basic/nav/nav
include ../../basic/link/link
include ../../basic/modal/modal

mixin header-top()
	block vars
	.header__top
		if pageId !== 'order'
			+nav(getData('navigation')[0],'top').nav-list--inline
		else
			+link('/index').link-small--pseudo
				i.icon-return.link-icon-return
				span.link__text.link-text--pseudo В магазин
		.user__menu
			+link('/cart').header-top__link
				i.icon-cart.header-top__icon-cart
				span.link__text Корзина
			+link('').header-top__link.js-login(data-toggle="modal", data-target="#loginPopup")
				i.icon-enter.header-top__icon-enter
				span.link__text Войти
			+modalLogin('loginPopup')
			+modalHello('helloPopup')
			+modalForgot('forgotPopup')
