mixin promoSlides(args)
	.promo__head
		+content-outer()
			.col-md-4.promo__col-md-4
				+carousel.slide.js-carousel
					.slide-item
						img(src="./assets/images/slide-1.jpg", alt="slide-1").slide__bg
