.showcase__category__header
	padding-top 60px

.category__filter
	display inline-block
	padding 25px 0 26px
	font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
	+below(4)
		padding-bottom 10px
	&-wrap
		border-bottom 1px solid #EBEBEB
		+below(4)
			border-bottom none
	&__title
		font-size 16px
		color #252525
		line-height 32px
		display inline-block
		vertical-align top
	&__slider-wrap
		display inline-block
		vertical-align top
		width 342px
		margin-top 16px
		margin-left 37px
	&__inputs
		display inline-block
		vertical-align top
	&__input
		display inline-block
		vertical-align top
		height 32px
		line-height 32px
		margin-left 34px
		&-text
			font-size 13px
			color #999

.category__nav
	background-color #F6F6F6
	border-top 1px solid #EBEBEB
	border-bottom 1px solid #EBEBEB

.category__tab-content
	padding-top 44px
	padding-bottom 76px
	background 	url(../images/pattern-color-bones-op30-149x149.png) 20px 57px,
							#F6F6F6
	+below(4)
		background none
	+tablet()
		padding-top 22px
		padding-bottom 30px
	+at(3)
		padding-top 16px
		padding-bottom 20px
	+below(2)
		padding-top 10px

	&__foot
		text-align center
		margin-top 45px
		+below(2)
			padding-left 20px
			padding-right 20px
		+tablet()
			margin-top 5px
		+mobile()
			margin-top 0
