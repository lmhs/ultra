include ../content/content
include ../../basic/product/product
include ../../basic/form/form
include ../../basic/nav-tabs/nav-tabs
include ../select-lg/select-lg
include ../select-sm/select-sm

mixin categoriesHeader()
	.category__header&attributes(attributes).visible-md-block.visible-lg-block
		.container-20-outer
			.row-20
				.col-md-20-5
					+select-lg().category__select--lg-container

mixin categoriesNav()
	.category__nav&attributes(attributes).visible-md-block.visible-lg-block
		.container-20-outer
			.row-20
				.col-md-20-5
					+navSubheader({
									links: [
										{
											isActive: true,
											href: '#large-appliances',
											class: 'js-category-nav-tab',
											icon: 'feather',
											content: 'Крупная бытовая техника'
											},
										{
											isActive: false,
											href: '#kitchen-appliances',
											class: 'js-category-nav-tab',
											icon: 'info',
											content: 'Техника для кухни'
											},
										{
											isActive: false,
											href: '#home-appliances',
											class: 'js-category-nav-tab',
											icon: 'review',
											content: 'Техника для дома'
											},
										{
											isActive: false,
											href: '#health-and-beauty-appliances',
											class: 'js-category-nav-tab',
											icon: 'help',
											content: 'Техника для красоты и здоровья'
											},
										{
											isActive: false,
											href: '#climate-equipment',
											class: 'js-category-nav-tab',
											icon: 'delivery',
											content: 'Климатическая техника'
											}
									]
								}).js-subheader-nav-tab
	// category subheader end

mixin categories()
	section.categories
		+categoriesHeader()
		+categoriesNav()
		.category__filter-wrap
			.container-20-outer
				.row-20
					.col-sm-4.visible-mobile
						.row-25
							.col-sm-25-2.col-xs-25-4.category__col-50p
								strong.category__title Категория
								.categories__select-sm-wrap
									+select-sm()
							.col-sm-25-2.col-xs-25-4.category__col-50p
								strong.category__title Подкатегория
								.categories__select-sm-wrap
									+select-sm()
					.col-md-20-5.col-sm-2
						.row-25
							.col-sm-25-4
								.category__filter
									strong.category__title.hidden-mobile
										| Выберите цену
									strong.category__title.category__title--price.visible-mobile-inline-block
										| Диапазон цен (от — до) !{''}
										span.category__title-currency
											| BYR
									.category__filter__slider-wrap.visible-md-inline-block.visible-lg-inline-block
										#slider.noUi-extended
									.category__filter__inputs
										.category__filter__input--from
											.category__filter__input.hidden-mobile
												.category__filter__input-text
													| от
											+input-simple-money({
																				type: 'text',
																				label: 'BYR'
																				//- min: 0,
																				//- max: 25999900,
																				//- step: 100
																			}).category__filter__input-field#js-slider-from
										.category__filter__input--to
											.category__filter__input.hidden-mobile
												.category__filter__input-text
													| до
											+input-simple-money({
																		type: 'text',
																		label: 'BYR'
																		//- min: 100,
																		//- max: 26000000,
																		//- step: 100
																	}).category__filter__input-field#js-slider-to
		// category filter end
		.tab-content.category__tab-content
			#large-appliances.tab-pane.active(role='tabpanel')
				.container-20-outer
					.row-20
						.col-md-20-1.col-sm-25-1.col-xs-2.product__col
							+product({
												type:'categories',
												rating: true,
												video: true,
												labels:'new'
											}).categories__product
							+product({
												type:'categories',
												rating: true,
												labels:'new'
											}).categories__product
							+product({
												type:'categories',
												rating: true,
												labels:'new'
											}).categories__product
						.col-md-20-1.col-sm-25-1.col-xs-2.product__col
							+product({
												type:'categories',
												rating: true,
												labels:'discount',
												oldPrice: '45 000 BYR'
											}).categories__product
							+product({
												type:'categories',
												rating: true,
												labels:'discount',
												oldPrice: '45 000 BYR'
											}).categories__product
						.col-md-20-1.col-sm-25-1.col-xs-2.product__col
							+product({
												type:'categories',
												rating: true
											}).categories__product
							+product({
												type:'categories',
												rating: true
											}).categories__product
						.col-md-20-1.col-sm-25-1.col-xs-2.product__col
							+product({
												type:'categories',
												rating: true,
												labels:'hit'
											}).categories__product
							+product({
												type:'categories',
												rating: true,
												labels:'hit'
											}).categories__product
						.col-md-20-1.col-sm-25-1.col-xs-2.product__col
							+product({
												type:'categories',
												rating: true,
												labels:'new'
											}).categories__product
							+product({
												type:'categories',
												rating: true,
												labels:'new'
											}).categories__product
			#kitchen-appliances.tab-pane(role='tabpanel')
				.container-20-outer
					.row-20
						.col-md-20-6
							| Техника для кухни
			#home-appliances.tab-pane(role='tabpanel')
				.container-20-outer
					.row-20
						.col-md-20-5
							| Техника для дома
			#health-and-beauty-appliances.tab-pane(role='tabpanel')
				.container-20-outer
					.row-20
						.col-md-20-5
							| Техника для красоты и здоровья
			#climate-equipment.tab-pane(role='tabpanel')
				.container-20-outer
					.row-20
						.col-md-20-5
							| Климатическая техника
			// category tab content end
			.category__tab-content__foot
				+buttonMore({itemCount:8})
			// category load more end
			script(src="https://www.youtube.com/iframe_api")

