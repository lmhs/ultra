.not-found
	background url(../images/girl-2-ok.jpg) center bottom no-repeat;
	padding-top 90px
	padding-bottom 150px

	&__heading
		text-align center
		margin-top 0
		margin-bottom 118px

		+below(4)
			font-size 22px
			color #111
			font-weight semibold
			margin-bottom 20px

		+tablet()
			text-align left

		+mobile()
			text-align center

	&__heading3
		font-size 28px
		color #d74125
		margin-top 0
		margin-bottom 19px

		+below(4)
			display none

	&__search-wrap
		padding-left 36px
		max-width 460px

		+below(4)
			padding-left 0
			max-width 100%

	&__btn-wrap
		display inline-block
		+below(4)
			order 4
			margin-bottom 25px
		+at(3)
			margin-right auto
			margin-left auto

	+below(4)
		.search__list
			display none

