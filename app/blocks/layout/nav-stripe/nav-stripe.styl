.nav-stripe
	font-size 0
	background-color #252525
	&__main
		font-size 14px
		display inline-block
		padding-top 15px
		padding-bottom 15px
		color #F6F6F6
		vertical-align top
	&-list
		display inline-block
		vertical-align top
		font-size 14px
		&__item
			display inline-block
			vertical-align top
			white-space nowrap
			&::after
				content '  |  '
				display inline-block
				vertical-align top
				color #F6F6F6
				padding 15px 5px 0
			&:first-child
				&::before
					content '  |  '
					display inline-block
					vertical-align top
					color #F6F6F6
					padding 15px 5px 0
		&__link
			padding 15px 0
			display inline-block
			vertical-align top
			color #F6F6F6
			text-decoration none
			position relative

			&:hover
				color #F6F6F6
				text-decoration underline


.buyers-choice__nav-stripe
	text-align center
