.hot
	border-top 3px solid #e14013
	padding-top 30px
	padding-bottom 50px
	+below(4)
		border-top none
	+tablet()
		padding-top 8px
		padding-bottom 33px
	+mobile()
		padding-top 20px
		padding-bottom 40px

	&__heading
		margin-bottom 40px
		text-align center
		+below(4)
			margin-top 0
		+tablet()
			font-size 24px
		+mobile()
			font-size 22px

		small
			margin-top 5px
			+tablet()
				font-size 16px
			+mobile()
				font-size 14px

	&__more
		margin-top 30px
		text-align center
		+below(4)
			margin-top 0
