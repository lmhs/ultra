.footer-legal

	&__info
		line-height 1.7
		color #464646
		display inline-block
		vertical-align bottom
		width 440px
	address
		margin 0
		display inline
		line-height 1.7

.footer-social
	position absolute
	right 0
	bottom 0
	line-height 1
	font-size 0
	&__social-link
		& + &
			margin-left 10px

.footer-info
	font-size 13px
	color #707070
	margin-top 40px

	+below(4)
		margin-top 0
		padding-bottom 30px

	.row
		border-top 1px solid #363636

		+below(4)
			border none

	&__col
		+below(2)
			width 100%


	&__copyright
		line-height 92px
		+below(4)
			line-height 1
			font-size 13px
			padding-right 40px
			padding-top 5px
		+at(4)
			text-align right
		+at(3)
			text-align left
			width 250px
		+below(2)
			width 100%
			text-align center
			padding-right 0

	&__author
		color #898989
		// font-family 'Roboto', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
		font-family 'Open Sans', 'Helvetica Neue', 'Segoe UI', Helvetica, Arial, sans-serif
		font-weight light
		font-size 11px
		line-height 1.6
		padding-top 24px
		padding-bottom 35px
		width 200px
		float right

		+below(4)
			padding-top 0
			padding-bottom 0
			width 250px
			float none
		+tablet()
			padding-left 40px
		+mobile()
			padding-left 0
		+below(2)
			margin 17px auto 0

	&__icon
		float left
		margin-top 4px

	&__txt
		margin-left 62px
		a
			color #898989
			text-decoration underline
			&:hover
			&:focus
				text-decoration none
